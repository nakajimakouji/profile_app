<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力内容に <%= pluralize(object.errors.count, "つのエラーがあります") %>.
    </div>
    <ul>
    <%# TODO:エラーメッセージを日本語化する %>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
