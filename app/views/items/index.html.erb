<%= form_tag(items_path, method: :get) do %>
  <div class="form-group">
    <%= select_tag 'month', options_for_select((1..12).map { |m| ["#{m}月", m] }, params[:month].to_i), onchange: 'this.form.submit();' %>
  </div>
<% end %>
<% @categories.each do |category| %>
  <%= category.name %>
  <%= link_to "項目を追加する", new_category_item_path(category), class: "btn btn-primary btn-sm", style: "float: right; margin-bottom: 10px; width: 20%;" %>
  <table class="table table-hover" border="1" style="border-collapse: collapse;">
  <thead>
    <tr class=" table-header">
      <th class="text-left" width="35%">
        項目名
      </th>
      <th class="text-center" width="30%">
        学習時間
      </th>
      <th class="text-center" width="20%"></th>
      <th class="text-center" width="15%"></th>
    </tr>
  </thead>
  <tbody>
  <% category.items.where(month: @month).each do |item| %>
    <tr>
      <td scope="row" style="vertical-align: middle;">
        <%= item.name %>
      </td>
      <td class="text-center">
        <%= select_tag "study_time", options_for_select((0..10).map { |i| ["#{i * 10} ", i * 10] }, item.study_time), class: "form-control" %>
      </td>
      <td class="text-center">
        <%= link_to "学習時間を保存する", "#", class: "btn btn-primary btn-sm" %>
      </td>
      <td class="text-center">
        <%= link_to "削除する", "#", class: "btn btn-primary btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
