<header>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><%= link_to " My Portfolio", root_path, id: "logo" %></h1>
      </div>
      <div class="col-md-6">
        <% if logged_in? %>
          <%= button_to "ログアウト", logout_path, method: :delete, class: "btn btn-primary pull-right" %>
