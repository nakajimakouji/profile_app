<% provide(:title, "ホーム画面") %>
<main>
  <div class="container">
    <% if logged_in? %>
      <div class="row profile">
        <div class="col-md-3 col-md-offset-2 avatar text-center">
          <% if current_user.avatar_image.attached? %>
            <%= image_tag current_user.avatar_image.variant(:display) %>
          <% else %>
            <%= gravatar_for current_user %>
          <% end %>
          <p><%= current_user.name %></p>
        </div>
        <div class="col-md-2">
            <h2>自己紹介</h2>
            <p class="user-profile"><%= current_user.profile_text %></p>
            <%= link_to "自己紹介を編集する", edit_user_path(current_user), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="top">
        <h2 class="text-center">ログイン</h2>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, :class => "form-control", :id => "email", :placeholder => "example@example.com" %>
            
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, :class => "form-control", :id => "password", :placeholder => "password" %>

            <%= f.submit "ログインする", class: "btn btn-primary" %>
            <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</main>