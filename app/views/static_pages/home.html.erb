<% provide(:title, "ホーム画面") %>
<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/chartkick@4" %>
<% if logged_in? %>
  <div class="top">
    <% if current_user.avatar_image.attached? %>
      <%= image_tag current_user.avatar_image.variant(:display) %>
    <% else %>
      <%= gravatar_for current_user %>
    <% end %>
    <p><%= current_user.name %></p>
    <h2>自己紹介</h2>
    <%= current_user.profile_text %>
    <p><%= link_to "自己紹介を編集する", edit_user_path(current_user), class: "btn btn-primary" %></p>
  </div>
  <div class="chart">
    <h2>学習チャート</h2>
    <%= link_to "編集する", items_path(month: Time.now.month), class: "btn btn-primary" %>
    <%= column_chart [
    { name: "バックエンド", data: @back_end },
    { name: "フロントエンド", data: @front_end },
    { name: "インフラ", data: @infra }
    ], height: "400px" %>
  </div>
<% else %>
  <div class="top">
    <p>ログイン</p>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email %>
        
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password %>

        <%= f.submit "ログインする", class: "btn btn-primary" %>
        <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>